@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('../images/auth-banner.jpg');"></div>
    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <h3>Welcome to <strong>ChatRoom</strong></h3>
                    <p class="mb-4">ChatRoom is a free chat application which can be using by anyone from anywhere!</p>
                    <div class="sign-in">
                        <p>Already have an account? Sign In Now!</p>
                        <a href="/auth/login" class="button">Sign In</a>
                    </div>
                    <br />
                    <div class="sign-up">
                        <p>You have no account? Sign Up Now!</p>
                        <a href="/auth/register" class="button">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>